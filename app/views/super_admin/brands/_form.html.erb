<%= form_for [:super_admin,@brand], html: { class: "mt-3" } do |f| %>
  <div class='row '>
    <div class="col-12 form-group">
      <%= f.label :name, 'Tên nhà cung cấp/phân phối',class: 'required' %>
      <%= f.text_field :name, placeholder: 'Tên thương hiệu', class: 'form-control', required: true %>
    </div>
  </div>
  <div class='row form-group'>
    <div class="col-12 form-group">
      <%= f.label :domain, 'Domain', class: 'required' %>
      <%= f.text_field :domain, placeholder: 'Domain', class: 'form-control', required: true %>
    </div>
  </div>
  <div class=' d-flex align-items-center justify-content-center'>
    <%= f.submit "#{@brand.new_record? ? "Thêm mới" : "Cập nhật"}", class: 'btn btn-success' %>
    <% if @brand.new_record? %>
      <%= link_to 'Hủy', super_admin_brands_path, class: 'btn btn-secondary mx-3', data: { confirm: 'Bạn có chắc không' } %>
    <% end %>
  </div>
<% end %>
