<div class='card'>
  <div class='card-body'>
    <h4>Sản phẩm</h4>
    <p>Tên: <strong><%= @product.name %></strong></p>
    <p>Hình ảnh</p>
    <div class="d-flex flex-wrap preview-image">
      <% @product&.images&.each do |image| %>
        <div class='image-preview m-3 position-relative ' id="image-<%= image.id %>">
          <%= image_tag image, width: 200 %>
        </div>
      <% end %>
    </div>
  </div>
</div>