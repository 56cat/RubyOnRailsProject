<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "user"  }) do |f| %>
  <div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block "></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Quên mật khẩu</h1>
            </div>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                placeholder: "Email",
                                class: "form-control form-control-user"%>
            </div>
              <%= f.submit "Gửi email", class: 'btn btn-primary btn-user btn-block' %>
            <hr>
            <div class="text-center">
              <%= link_to "Đăng nhập", new_session_path(resource_name), class: 'small' %><br/>
              <%= link_to "Đăng ký", new_registration_path(resource_name), class: 'small' %><br/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>

