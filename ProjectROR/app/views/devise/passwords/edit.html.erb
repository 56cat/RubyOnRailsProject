
<%= form_for(resource,
             as: resource_name,
             url: password_path(resource_name),
             html: { method: :put, class: "user" }) do |f| %>
  <div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block "></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Đổi mật khẩu</h1>
            </div>
            <div class="form-group">
              <%= f.password_field :password,
                                   autofocus: true,
                                   autocomplete: "new-password",
                                   placeholder: "Mật khẩu #{  "(Tối thiểu #{ @minimum_password_length} ký tự)" if @minimum_password_length.present? }",
                                   class: "form-control form-control-user"%>

            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation,
                                   autofocus: true,
                                   autocomplete: "new-password",
                                   placeholder: "Nhập lại mật khẩu",
                                   class: "form-control form-control-user"%>

            </div>
            <%= f.submit "Thay đổi mật khẩu", class: 'btn btn-primary btn-user btn-block' %>
            <hr>
            <div class="text-center">
              <%= link_to "Đăng nhập", new_session_path(resource_name), class: 'small' %><br/>
              <%= link_to "Đăng ký", new_registration_path(resource_name), class: 'small' %><br/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
