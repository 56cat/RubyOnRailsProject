<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user" }) do |f| %>
  <div class="card o-hidden border-0 shadow-lg">
    <div class="card-body p-0">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản mới!</h1>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">
                <%= f.text_field :name,
                                 placeholder: "Họ và tên",
                                 class: 'form-control form-control-user'
                %>
              </div>
              <div class="col-sm-6">
                <%= f.text_field :phone,
                                 placeholder: "Số điện thoại",
                                 class: "form-control form-control-user" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.email_field :email,
                                placeholder: "Email",
                                class: "form-control form-control-user" %>
            </div>
            <div class="form-group">
              <%= f.text_area :address,
                                placeholder: "Địa chỉ ",
                                class: "form-control form-control-user" %>
            </div>
<!--            <div class="form-group row">-->
<!--              <div class="col-sm-6 mb-3 mb-sm-0">-->
                <%#= f.password_field :password, placeholder: "Mật khẩu #{  "(Tối thiểu #{ @minimum_password_length} ký tự)" if @minimum_password_length.present? }", class: "form-control form-control-user" %>

<!--              </div>-->
<!--              <div class="col-sm-6">-->
                <%#= f.password_field :password_confirmation, placeholder: "Nhập lại mật khẩu", class: "form-control form-control-user" %>
<!--              </div>-->
<!--            </div>-->
            <%= f.hidden_field :role, value: 'user' %>
            <%= f.submit "Đăng ký", class: 'btn btn-primary btn-user btn-block' %>
            <hr>
            <div class="text-center">
              <%= link_to "Bạn đã có tài khoản? Đăng nhập", new_session_path(resource_name), class: 'small' %><br/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
