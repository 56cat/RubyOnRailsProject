<div class="card">
  <div class='card-body'>
    <h4>Chi tiết phiếu</h4>
    <div class='row mt-2'>
      <div class='col-6'>
        <p>
          <strong>Mã phiếu:</strong><%= @note.code %>
        </p>
        <p>
          <strong>Loại:</strong><%= t("note.kind.#{@note.kind}") %>
        </p>
        <p><strong>Thời gian:</strong><%= @note.created_at.strftime('%d/%m/%Y') %></p>
      </div>
    </div>
  </div>
</div>
<div class='card mt-4'>
  <div class='card-body'>
    <h4>Danh sách sản phẩm</h4>
    <table class="table table-bordered table-hover">
      <thead>
      <tr>
        <td>Tên sản phẩm</td>
        <td>Số lượng</td>
        <td>Giá</td>
        <td>Ghi chú</td>
      </tr>
      </thead>
      <tbody>
      <% if @note.import_export_histories.present? %>
        <% @note.import_export_histories&.each do |import_export_history| %>
          <tr>
            <td><%= import_export_history.owner.product.name %></td>
            <td><%= import_export_history.quantity %></td>
            <td><%= format_currency(import_export_history.buy_price) %></td>
            <td><%= import_export_history.note %></td>
          </tr>
        <% end %>

      <% else %>
      <tr>
        <td>Không có dữ liệu xuất nhập</td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>